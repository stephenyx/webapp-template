{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@repo/db": ["../../packages/db/src"],
      "@repo/types": ["../../packages/types/src"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
